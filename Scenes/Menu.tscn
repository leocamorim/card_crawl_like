func _on_bt_start_pressed():
	get_parent().get_node(\"BtStart/Label\").rect_position.y += 30

func _on_bt_config_pressed():
	get_parent().get_node(\"BtConfig/Label\").rect_position.y += 30

func _on_bt_desc_pressed():
	get_parent().get_node(\"BtDesc/Label\").rect_position.y += 30

func _on_bt_start_released():
	get_parent().get_node(\"BtStart/Label\").rect_position.y -= 30
	Master.moveToScene(\"InGame\")

func _on_bt_config_released():
	get_parent().get_node(\"BtConfig/Label\").rect_position.y -= 30
	Master.moveToScene(\"Settings\")

func _on_bt_desc_released():
	get_parent().get_node(\"BtDesc/Label\").rect_position.y -= 30
